# Server
PORT=3001
NODE_ENV=development

# Session & Security (CHANGE IN PRODUCTION!)
SESSION_SECRET=laps-portal-change-this-secret-in-production
JWT_SECRET=jwt-secret-change-this-in-production-use-random-string
JWT_EXPIRY=8h
PASSWORD_DISPLAY_MINUTES=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=10

# Active Directory Configuration
AD_URL=ldap://dc01.yourdomain.local
AD_BASE_DN=DC=yourdomain,DC=local
AD_USERNAME=svc_laps_reader@yourdomain.local
AD_PASSWORD=YourServiceAccountPassword
AD_ADMIN_GROUP=GG_LAPS_Request_Admins

# LAPS Attribute Names (Classic LAPS)
LAPS_PASSWORD_ATTRIBUTE=ms-Mcs-AdmPwd
LAPS_EXPIRY_ATTRIBUTE=ms-Mcs-AdmPwdExpirationTime

# Windows LAPS (New) - for future use
WINDOWS_LAPS_PASSWORD_ATTRIBUTE=msLAPS-Password
WINDOWS_LAPS_ENCRYPTED_PASSWORD_ATTRIBUTE=msLAPS-EncryptedPassword

# Database
DATABASE_PATH=./data/laps.db

# Encryption key for temporary password storage (32 characters, CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=32-char-encryption-key-change!!

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
